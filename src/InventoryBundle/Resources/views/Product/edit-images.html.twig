<a href="#" class="btn btn-raised btn-success btn-block" data-toggle="modal" data-target="#image-modal">
    <i class="fa fa-plus"></i>
    Add An Image
</a>
<hr>

<div id="display-attributes">
    <div class="box">
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table">
                <thead>
                <tr>
                    <td width="100px">Spec</td>
                    <th>Image</th>
                    <th style="width: 150px">Options</th>
                </tr>
                </thead>

                <tbody>
                {% verbatim %}
                    <tr ng-repeat="(i, image) in product_images track by $index">
                        <td><input type="radio" name="detail_image" ng-model="image.detail_image" value="image.id" ng-click="updateProductImageAsDetail(image.id)" /> </td>
                        <td><img src="/uploads/products/{{image.path}}" alt="Product Image" style="max-height: 150px;"> </td>
                        <td>
                            <a class="btn btn-raised btn-danger rich-btn" ng-click="removeProductImage(image.id)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endverbatim %}
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>

<div class="modal fade" id="image-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel4">Image</h4>
            </div>
            <div class="modal-body">
                {% verbatim %}
                <h4>Upload on file select</h4>
                <button type="file" ngf-select="addProductImage($file, $invalidFiles)"
                        accept="image/*" ngf-max-height="1000" ngf-max-size="1MB" class="btn btn-raised btn-primary">
                    Select File</button>
                <br><br>
                File:

                <div style="font:smaller">{{f.name}} {{errFile.name}} {{errFile.$error}} {{errFile.$errorParam}}
                    <span class="progress" ng-show="f.progress >= 0">
                        <div style="width:{{f.progress}}%" ng-bind="f.progress + '%'"></div>
                    </span>
                </div>
                {{errorMsg}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-raised btn-success" data-dismiss="modal">Accept</button>
            </div>
            {% endverbatim %}

            </div>
        </div>
    </div>
</div>
