{% extends ':default:layout.html.twig' %}

{% block title %}Rebate list{% endblock %}
{% block page_title %}
    Rebate list
{% endblock page_title %}

{% block page_name %}
    Rebate
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50, responsive: true, "fnDrawCallback": function(oSettings) {if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {$(oSettings.nTableWrapper).find('.dataTables_paginate').hide();}} });
        });
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-raised btn-success" href="{{ path('rebate_new') }}" style="margin-bottom: 15px;">Create a POP Item</a>
            <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rebate in rebates %}
            <tr>
                <td><a href="{{ path('rebate_edit', { 'id': rebate.id }) }}">{{ rebate.name }}</a></td>
                <td>{{ rebate.description }}</td>
                <td>{% if rebate.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rebate_show', { 'id': rebate.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rebate_edit', { 'id': rebate.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
{% endblock %}
