{% extends ':default:layout.html.twig' %}

{% block title %}Purchase Order{% endblock %}
{% block page_title %}
    Purchase Order
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('purchaseorder_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                paging: false
            });
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="table">
        <div class="col-md-12">
            <div class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ purchaseOrder.id }}</td>
                </tr>
                <tr>
                    <th>Orderdate</th>
                    <td>{% if purchaseOrder.orderDate %}{{ purchaseOrder.orderDate|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Stockduedate</th>
                    <td>{% if purchaseOrder.stockDueDate %}{{ purchaseOrder.stockDueDate|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Ordernumber</th>
                    <td>{{ purchaseOrder.orderNumber }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ purchaseOrder.message }}</td>
                </tr>
                </tbody>
                </table>

                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
