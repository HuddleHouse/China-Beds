{% extends ':default:layout.html.twig' %}

{% block title %}Warehouse{% endblock %}

{% block page_title %}
    Warehouse Inventory
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('warehouse_inventory_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
<div ng-app="myApp" ng-controller="myCtrl">
    <div class="row">
        <center><h2>{{ warehouse.name }}</h2></center>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr role="row">
                        <th>Name</th>
                        <th>Quantity on Hand</th>
                        <th>Quantity on P.O.</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in inventory_data %}
                        <tr>
                            <td>{{ data.name }}</td>
                            <td><center>{{ data.quantity }}</center></td>
                            <td><center>{{ data.po_quantity }}</center></td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


    <div class="modal fade" id="product" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add Variant</h4>
                </div>
                <div class="modal-body">
                    <label for="variant_name" class="required">Name</label>
                    <input type="text" id="variant_name" name="" required="required" class="form-control" style="margin-bottom: 10px">
                    <label for="sku" class="required">SKU</label>
                    <input type="text" id="variant_sku" name="" required="required" class="form-control" style="margin-bottom: 10px">
                    <label for="msrp" class="required">MSRP</label>
                    <input type="text" id="variant_msrp" name="" required="required" class="form-control" style="margin-bottom: 10px">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-raised btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-raised btn-primary" ng-click="addProductVariant()" data-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <a id="new-button" data-toggle="modal" data-target="#product" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-tooltip mdl-tooltip--top mdl-tooltip--large" for="new-button">
        Create an inventory item.
    </div>
{% endblock %}
