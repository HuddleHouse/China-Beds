{% extends ':default:layout.html.twig' %}

{% block title %}Warehouse{% endblock %}

{% block page_title %}
    Warehouse Inventory
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('warehouse_inventory_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <center><h2>{{ warehouse.name }}</h2></center>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr role="row">
                        <th>Name</th>
                        <th>Quantity on Hand</th>
                        <th>Quantity on P.O.</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in inventory_data %}
                        <tr>
                            <td>{{ data.ItemInventoryRefFullName }}</td>
                            <td><center>{{ data.QuantityOnHand }}</center></td>
                            <td><center>{{ data.QuantityOnPurchaseOrders }}</center></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
