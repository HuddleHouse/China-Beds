{% extends ':default:layout.html.twig' %}

{% block title %}Warehouse list{% endblock %}
{% block page_title %}
    Warehouse list
{% endblock page_title %}

{% block page_name %}
    Warehouse
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <a class="btn btn-raised btn-success" href="{{ path('warehouse_new') }}" style="margin-bottom: 15px;">Create a Warehouse</a>
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Total Inventory</th>
                        <th>P.O.</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for warehouse in warehouses %}
                        <tr>
                            <td><a href="{{ path('warehouse_inventory_show', { 'id': warehouse.id }) }}">{{ warehouse.name }}</a></td>
                            <td><center>{{ warehouse.quantity | number_format(2) }}</center></td>
                            <td><center>{{ warehouse.po_quantity | number_format(2) }}</center></td>
                            <td>
                                <a class="btn btn-raised btn-info btn-xs purple" href="{{ path('warehouse_edit', { 'id': warehouse.id }) }}"><i class="fa fa-edit"></i> edit</a>
                                <a class="btn btn-raised btn-default btn-xs purple" href="{{ path('warehouse_show', { 'id': warehouse.id }) }}"><i class="fa fa-list"></i> show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
