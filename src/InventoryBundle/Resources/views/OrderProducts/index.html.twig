                                    <label class="control-label" for="Pick Up Agent Name">Pick Up Agent Name</label>
                                    <input id="Pick Up Agent Name" name="Pick Up Agent Name" type="text" placeholder="" class="form_field input-md">
                                </div>
                                <div class="col-md-3" style="margin-top: 18px;">
                                    <input type="checkbox" name="checkboxes" id="checkboxes-0" value="ship" style="display: inline;margin-right: 8px;
}">
                                    <label class="checkbox" for="checkboxes-0" style="display: inline;">Ship</label>
                                </div>
                                <div class="col-md-3" style="margin-top: 18px;">
                                    <input type="checkbox" name="checkboxes" id="checkboxes-1" value="pick_up" style="display: inline;margin-right: 8px;
}">
                                    <label class="checkbox" for="checkboxes-1" style="display: inline;">Pick Up</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label" for="Comments">Comments</label>
                                    <textarea class="form_field" id="Comments" name="Comments" style="min-height: 50px;"></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="table" style="background:rgba(2,177,242,.35); min-height: 250px;">
                    <br>
                    <center><h1 style="color: #fff;">Get More, Make More</h1></center>
                    <center><h2>Specials</h2></center>
                    <center><h4>Save up to 25% on closeout items!</h4></center>
                </div>
            </div>
        </div>

        <div class="row" style="padding-bottom: 40px;padding-top: 40px;">
            <div class="col-md-7">
                <div class="button-group filters-button-group" style="text-align: center; margin-top: 29px;">
                    <button class="button is-checked" data-filter="*">ALL</button>
                    {% for category in categories %}
                        <button class="button" data-filter=".{{ category.id }}">{{ category.name }}</button>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-5">
                <div class="table" style="background-color: #02B1F2;">
                    <div class="row">
                        <div class="col-md-3">
                            <center>Item (s)</center>
                            <input type="number" value="0" class="form-control cart_info" style="" readonly>
                        </div>
                        <div class="col-md-4">
                            <center>Total ($)</center>
                            <input type="number" value="0" class="form-control cart_info" style="" readonly>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-raised review_cart_button">Review Order ></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="grid">
            {% for product in products %}
                <div class="col-md-6 element-item {{ product.category_id }}" style="padding: 15px; min-height: 285px;">
                    <div class="product_image" style="display: table; margin: 0 auto;">
                        <img src="http://placehold.it/350x150" style="border: 1px solid #95989A;">
                        <div class="product_name">
                            <center>{{ product.name }}</center>
                        </div>
                    </div>
                    {#<div cl#}
                    <div class="price_box_row">
                    {% for variant in product.variants %}

                            <div class="col-md-2">
                                <div class="variant_name">
                                    {{ variant.name }}
                                </div>
                                <div class="variant_quantity">
                                    <input type="number" class="form-control" value="0" style="text-align: center;">
                                </div>
                                <div class="variant_price">
                                    {{ variant.price | number_format(2, '.', ',')}}
                                </div>
                            </div>
                    {% endfor %}
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
