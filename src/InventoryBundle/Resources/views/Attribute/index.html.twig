{% extends ':default:layout.html.twig' %}

{% block title %}Attribute list{% endblock %}
{% block page_title %}
    Attribute list
{% endblock page_title %}

{% block page_name %}
    Assortment
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <a class="btn btn-success" href="{{ path('attribute_new') }}" style="margin-bottom: 15px;">Create a new attribute</a>
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th style="width: 100px;">Image</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for attribute in attributes %}
                        <tr>
                            <td><a href="{{ path('attribute_edit', { 'id': attribute.id }) }}">{{ attribute.name }}</a></td>
                            <td>
                                {% if attribute.webPath %}
                                <div id="preview-pane" >
                                    <div class="preview-container" style="margin-left: auto; margin-right: auto; text-align: center">
                                        <img src="/{{ attribute.webPath }}" width="80"/><br/>
                                    </div>
                                </div>
                                {% endif %}
                            </td>
                            <td>
                                <a class="btn btn-default btn-xs purple" href="{{ path('attribute_edit', { 'id': attribute.id }) }}"><i class="fa fa-edit"></i> edit</a>
                                <a class="btn btn-info btn-xs purple" href="{{ path('attribute_show', { 'id': attribute.id }) }}"><i class="fa fa-list"></i> show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
