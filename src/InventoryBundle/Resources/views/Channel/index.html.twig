{% extends ':default:layout.html.twig' %}

{% block title %}Channel list{% endblock %}
{% block page_title %}
    Channel list
{% endblock page_title %}

{% block page_name %}
    User
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <a class="btn btn-success" href="{{ path('admin_channel_new') }}" style="margin-bottom: 15px;">Create a new Channel</a>
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Url</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for channel in channels %}
                        <tr>
                            <td><a href="{{ path('admin_channel_edit', { 'id': channel.id }) }}">{{ channel.name }}</a></td>
                            <td>{{ channel.url }}</td>
                            <td>
                                <a class="btn btn-info btn-xs" href="{{ path('admin_channel_edit', { 'id': channel.id }) }}"><i class="fa fa-edit"></i> edit</a>
                                <a class="btn btn-default btn-xs" href="{{ path('admin_channel_show', { 'id': channel.id }) }}"><i class="fa fa-list"></i> show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
