{% block title %}Specification{% endblock %}
{% block page_title %}
    Specification
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('specification_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50, responsive: true});
        });
    </script>
{% endblock footer %}

{% block content %}
    <h1>Specification</h1>

    <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specification.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specification.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ specification.code }}</td>
            </tr>
        </tbody>
    </table>

            <a class="btn btn-raised btn-default" href="{{ path('specification_edit', { 'id': specification.id }) }}">Edit</a>
            {{ form_start(delete_form) }}
                <input style="margin: -55px 0px 0px 60px;" class="btn btn-raised btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
{% endblock %}
