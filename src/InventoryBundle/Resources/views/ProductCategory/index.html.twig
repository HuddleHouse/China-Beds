{% extends ':default:layout.html.twig' %}

{% block title %}Product Categories{% endblock %}
{% block page_title %}
    Product Categories
{% endblock page_title %}

{% block page_name %}
    Assortment
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}


{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th style="width: 150px;">Total Inventory</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for productCategory in productCategories %}
                        <tr>
                            <td><a href="{{ path('product_category_edit', { 'id': productCategory.id }) }}">{{ productCategory.name }}</a></td>
                            <td>{{ productCategory.code }}</td>
                            <td><center>8,734</center></td>
                            <td>
                                <a class="btn btn-raised btn-xs btn-default" href="{{ path('product_category_edit', { 'id': productCategory.id }) }}"><i class="fa fa-edit"></i> edit</a>
                                <a class="btn btn-raised btn-xs btn-info" href="{{ path('product_category_show', { 'id': productCategory.id }) }}"><i class="fa fa-list"></i> show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a id="new-button" href="{{ path('product_category_new') }}" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-tooltip mdl-tooltip--top mdl-tooltip--large" for="new-button">
        Create a Product Category
    </div>
{% endblock %}
