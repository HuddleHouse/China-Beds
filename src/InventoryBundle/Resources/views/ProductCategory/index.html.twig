{% extends ':default:layout.html.twig' %}

{% block title %}Product Category{% endblock %}
{% block page_title %}
    Product Category
{% endblock page_title %}

{% block page_name %}
    Assortment
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            });
        });
    </script>
{% endblock footer %}


{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-success" href="{{ path('product_category_new') }}" style="margin-bottom: 15px;">Create a Product Category</a>
    <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th style="width: 150px;">Total Inventory</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td><a href="{{ path('product_category_edit', { 'id': productCategory.id }) }}">{{ productCategory.name }}</a></td>
                <td>{{ productCategory.code }}</td>
                <td><center>8,734</center></td>
                <td>
                    <a class="btn btn-xs btn-default" href="{{ path('product_category_edit', { 'id': productCategory.id }) }}"><i class="fa fa-edit"></i> edit</a>
                    <a class="btn btn-xs btn-info" href="{{ path('product_category_show', { 'id': productCategory.id }) }}"><i class="fa fa-list"></i> show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
