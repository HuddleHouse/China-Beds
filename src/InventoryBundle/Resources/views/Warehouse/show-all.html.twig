<div id="display-variants">
    <div class="box-body">
        <div class="table-responsive">
            <table class="table no-margin">
                <thead>
                <tr>
                    <th>Order #</th>
                    <th>Type</th>
                    <th>Warehouse</th>
                    <th>Status</th>
                    <th>Due</th>
                    <th>Last Updated</th>
                </tr>
                </thead>
                <tbody>
                {% for item in all_po %}
                    <tr>
                        <td><a href="{{ path('purchaseorder_show', { 'id': item.id }) }}">{{ item.order_number }}</a></td>
                        <td>Purchase Order</td>
                        <td>{{ item.warehouse_name }}</td>
                        <td><span class="label" style="background-color: {{ item.color }}">{{ item.status_name }}</span></td>
                        <td>{{ item.stock_due_date | date("m/d/Y")  }}</td>
                        <td>{{ item.order_date | date("m/d/Y")  }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
</div>