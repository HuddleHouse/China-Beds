{% extends ':default:layout.html.twig' %}

{% block title %}Manage Options{% endblock %}
{% block page_title %}
    Manage Options
{% endblock page_title %}

{% block page_name %}
    Assortment
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}


{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">

                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for manageOption in manageOptions %}
                        <tr>
                            <td><a href="{{ path('manage_options_edit', { 'id': manageOption.id }) }}">{{ manageOption.name }}</a></td>
                            <td>{{ manageOption.code }}</td>
                            <td>
                                <a class="btn btn-raised btn-info btn-xs purple" href="{{ path('manage_options_edit', { 'id': manageOption.id }) }}"><i class="fa fa-edit"></i> edit</a>
                                <a class="btn btn-raised btn-default btn-xs purple" href="{{ path('manage_options_show', { 'id': manageOption.id }) }}"><i class="fa fa-list"></i> show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a id="new-button" href="{{ path('manage_options_new') }}" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-tooltip mdl-tooltip--top mdl-tooltip--large" for="new-button">
        Create a new option
    </div>
{% endblock %}
