{% extends ':default:layout.html.twig' %}

{% block title %}Approve/Deny Warranty Claim{% endblock %}
{% block page_title %}
    Approve/Deny Warranty Claim
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('warrantyclaim_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#warrantyclaim_resolution').keyup(function () {
                var len = $(this).val().length;
                if (len >= 255) {
                    $(this).val($(this).val().substring(0, 255));
                    $('#charNum').text(0);
                } else {
                    var l = 255 - len;
                    $('#charNum').text(l);
                }
            });
        });
    </script>
{% endblock footer %}

{% block content %}
    {% if not form.vars.valid %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    {{ form_errors(form.resolution) }}
                </div>
            </div>
        </div>
    {% endif %}
    <div class="table">
        <div class="row">
            <div class="col-md-4">
                <table class="table table-striped table-bordered no-footer">
                    <thead>
                    <tr>
                        <th colspan="2" style="text-align: center">
                            Claim Info
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Credit for</td>
                        <td>{{ warranty_claim.submittedForUser.fullName | default('--') }}</td>
                    </tr>
                    <tr>
                        <td>Added by</td>
                        <td>{{ warranty_claim.submittedByUser.fullName | default('--') }}</td>
                    </tr>
                    <tr>
                        <td>Date of Claim</td>
                        <td>{{ warranty_claim.dateOfClaim | date('m/d/y') }}</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center">Description</td>
                    </tr>
                    <tr>
                        <td colspan="2">{{ warranty_claim.description }}</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center">Order Info</td>
                    </tr>
                    <tr>
                        <td>Order #</td>
                        <td>{{ order.orderNumber | default('--') }}</td>
                    </tr>
                    <tr>
                        <td>Order Total</td>
                        <td>{{ order.total | default('--') }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>{{ order. | default('--') }}</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>{{  | default('--') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-body">
            {{ form_start(form, {'attr': { 'class': 'form-horizontal' } }) }}
            <div class="row">
                <div class="col-md-4 form-group">
                    {{ form_label(form.resolution) }}
                    {{ form_widget(form.resolution) }}
                </div>
            </div>
            {% if ledger.isArchived %}
                <br><strong>You may not edit a warranty claim that has been processed.</strong>
            {% else %}
                <input class="btn btn-raised btn-success" type="submit" value="Submit" />
            {% endif %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}