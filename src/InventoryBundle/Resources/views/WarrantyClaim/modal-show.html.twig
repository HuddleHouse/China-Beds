            </tr>
            <tr>
                <td>Image 3</td>
                <td>{% if(warranty_claim.path1 is not null) %}<a target="_blank" href="{{ warranty_claim.webPath1 }}">View</a>/<a download href="{{ warranty_claim.webPath3 }}">Download</a>{% else %}--{% endif %}</td>
