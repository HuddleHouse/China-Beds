{% extends ':default:layout.html.twig' %}

{% block title %}Warranty Claim list{% endblock %}
{% block page_title %}
    Warranty Claim list
{% endblock page_title %}

{% block page_name %}
    Warranty Claim
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-success" href="{{ path('warrantyclaim_new') }}" style="margin-bottom: 15px;">Create a Warranty Claim</a>
            <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datemadeaware</th>
                <th>Dateofclaim</th>
                <th>Ratailer</th>
                <th>Mattressmodelid</th>
                <th>Quantity</th>
                <th>Creditrequested</th>
                <th>Description</th>
                <th>Resolution</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for warrantyClaim in warrantyClaims %}
            <tr>
                <td><a href="{{ path('warrantyclaim_show', { 'id': warrantyClaim.id }) }}">{{ warrantyClaim.id }}</a></td>
                <td>{% if warrantyClaim.dateMadeAware %}{{ warrantyClaim.dateMadeAware|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if warrantyClaim.dateOfClaim %}{{ warrantyClaim.dateOfClaim|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ warrantyClaim.ratailer }}</td>
                <td>{{ warrantyClaim.mattressModelId }}</td>
                <td>{{ warrantyClaim.quantity }}</td>
                <td>{{ warrantyClaim.creditRequested }}</td>
                <td>{{ warrantyClaim.description }}</td>
                <td>{{ warrantyClaim.resolution }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('warrantyclaim_show', { 'id': warrantyClaim.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('warrantyclaim_edit', { 'id': warrantyClaim.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
            </div>
            </div>
{% endblock %}
