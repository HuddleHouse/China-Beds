{% extends ':default:layout.html.twig' %}

{% block title %}Rebates{% endblock %}
{% block page_title %}
    Rebates
{% endblock page_title %}

{% block page_name %}
    PopItem
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-success" href="{{ path('rebate_new') }}" style="margin-bottom: 15px;">Create a Rebate</a>
            <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amountrequested</th>
                <th>Amountissued</th>
                <th>Creditissued</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rebateSubmission in rebateSubmissions %}
            <tr>
                <td><a href="{{ path('rebate_show', { 'id': rebateSubmission.id }) }}">{{ rebateSubmission.id }}</a></td>
                <td>{{ rebateSubmission.amountRequested }}</td>
                <td>{{ rebateSubmission.amountIssued }}</td>
                <td>{% if rebateSubmission.creditIssued %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rebate_show', { 'id': rebateSubmission.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rebate_edit', { 'id': rebateSubmission.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
{% endblock %}
