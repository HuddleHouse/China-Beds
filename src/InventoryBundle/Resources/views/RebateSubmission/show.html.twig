{% extends 'base.html.twig' %}

{% block body %}
    <h1>RebateSubmission</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rebateSubmission.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rebateSubmission.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ rebateSubmission.description }}</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>{% if rebateSubmission.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rebate_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rebate_edit', { 'id': rebateSubmission.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
