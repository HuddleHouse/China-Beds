{% extends ':default:layout.html.twig' %}

{% block title %}Rebate{% endblock %}
{% block page_title %}
    Rebate
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('rebate_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50, responsive: true, "fnDrawCallback": function(oSettings) {if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {$(oSettings.nTableWrapper).find('.dataTables_paginate').hide();}} });
        });
    </script>
{% endblock footer %}

{% block content %}
    <h1>RebateSubmission</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rebateSubmission.id }}</td>
            </tr>
            <tr>
                <th>Amountrequested</th>
                <td>{{ rebateSubmission.amountRequested }}</td>
            </tr>
            <tr>
                <th>Amountissued</th>
                <td>{{ rebateSubmission.amountIssued }}</td>
            </tr>
            <tr>
                <th>Creditissued</th>
                <td>{% if rebateSubmission.creditIssued %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rebate_submit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rebate_submit_edit', { 'id': rebateSubmission.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
