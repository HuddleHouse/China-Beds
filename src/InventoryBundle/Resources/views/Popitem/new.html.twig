{% extends ':default:layout.html.twig' %}

{% block title %}PopItem creation{% endblock %}
{% block page_title %}
    PopItem creation
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('pop_item_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                paging: false
            });
        });
    </script>
{% endblock footer %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-6">
            {{ form_label(form.sku) }}
            {{ form_widget(form.sku) }}
        </div>
    </div>

    {{ form_widget(form) }}
    <div class="row">
        {% if popItem.webPath %}
            <div id="preview-pane" style="margin-bottom: 30px;">
                <div class="preview-container">
                    <img src="/{{ popItem.webPath }}" style="max-height: 200px;"/><br/>
                </div>
            </div>
        {% endif %}
    </div>

    <input class="btn btn-raised btn-success" type="submit" value="Create" />
    {{ form_end(form) }}

{% endblock %}
