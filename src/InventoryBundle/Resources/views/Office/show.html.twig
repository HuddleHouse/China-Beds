{% extends ':default:layout.html.twig' %}

{% block title %}Office{% endblock %}

{% block page_title %}
Office
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('office_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50, responsive: true});
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <center><h2>{{ office.name }}</h2></center>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr role="row">
                        <th>Name</th>
                        <th>Company</th>
                        <th>City</th>
                        <th>State</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr role="row" class="odd">
                            <td><a href="{{ path('admin_edit_user', {'user_id': user.id}) }}">{{ user.firstName }} {{ user.lastName }}</a></td>
                            <td><a href="{{ path('office_edit', {'id': user.office.id}) }}">{{ user.office.name ? user.office.name : '' }}</a></td>
                            <td>{{ user.city }}</td>
                            <td>{{ user.state.name }}</td>
                        </tr>
                    {%  endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
