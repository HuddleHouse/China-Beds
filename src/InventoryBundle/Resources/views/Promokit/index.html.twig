{% extends ':default:layout.html.twig' %}

{% block title %}Promo Kit list{% endblock %}
{% block page_title %}
    Promo Kit list
{% endblock page_title %}

{% block page_name %}
    Promo Kit
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-success" href="{{ path('promokit_new') }}" style="margin-bottom: 15px;">Create a Promo Kit</a>
            <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promoKit in promoKits %}
            <tr>
                <td><a href="{{ path('promokit_show', { 'id': promoKit.id }) }}">{{ promoKit.name }}</a></td>
                <td>{{ promoKit.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('promokit_show', { 'id': promoKit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('promokit_edit', { 'id': promoKit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        </div>
    </div>
</div>
{% endblock %}
