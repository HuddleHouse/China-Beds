{% extends ':default:layout.html.twig' %}

{% block title %}Stock Transfer{% endblock %}

{% block page_title %}
    Stock Transfer
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('stocktransfer_index') }}">< Back to Stock Transfers</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(function() {
            $("#departing-warehouse").val('{{ stockTransfer.departingWarehouse.id }}');
            $("#receiving-warehouse").val('{{ stockTransfer.receivingWarehouse.id }}');
            $(".ui-spinner-button").hide();
        });

        (function () {
            'use strict';
            angular.module('myApp',['ngMaterial', 'ngMessages'])
                    .controller('myCtrl', MyCtrl)
                    .directive('jqSpinner', jqSpinner);

            function MyCtrl ($scope, $timeout, $q, $log) {
                var self = this;

                self.simulateQuery = false;
                self.isDisabled    = false;

                self.repos         = loadAll();
                self.querySearch   = querySearch;
                self.selectedItemChange = selectedItemChange;
                self.searchTextChange   = searchTextChange;
                self.updateCartItem   = updateCartItem;
                self.warehouseChange   = warehouseChange;
                self.save = save;
                self.cart = {{ cart.cart | json_encode | raw}};
                self.cart_items = [];
                self.selectedItem = [];
                self.searchText = '';
                self.message = '';
                self.cart_total = {{ cart.total | json_encode | raw}};
                self.transfer_date = new Date("{{ stockTransfer.date |date("Y,m,d") }}");
                self.setActive = setActive;
                self.setEdit = setEdit;
                self.isEdit = 0;
                self.warehouses = {{ warehouses | json_encode | raw}};
                self.beforeQuantity = 0;

                self.departing_warehouse = {};
                self.receiving_warehouse = {};

                function warehouseChange(type) {
                    updateCart(type)
                }

                function updateCart(type) {
                    if (type === 'departing')
                        var id = '#departing-warehouse';
                    else if (type === 'receiving')
                        var id = '#receiving-warehouse';
                    var warehouse_id = $(id).val();

                    if (warehouse_id != null) {
                        angular.forEach(self.cart, function (value, key) {
                            $.ajax({
                                type: 'POST',
                                url: "{{ path('api_get_warehouse_inventory_for_product') }}",
                                dataType: 'json',
                                data: {product_variant_id: value.id, warehouse_id: warehouse_id},
                                success: function (data) {
                                    $scope.$apply(function () {
                                        if (type === 'departing')
                                            self.cart[key].departing_warehouse_quantity = parseInt(data, 10) - parseInt(self.cart[key].quantity, 10);
                                        else if (type === 'receiving')
                                            self.cart[key].receiving_warehouse_quantity = parseInt(data, 10) + parseInt(self.cart[key].quantity, 10);
                                    });
                                }
                            });
                        });
                    }
                }

                function querySearch (query) {
                    var results = query ? self.repos.filter( createFilterFor(query) ) : self.repos,
                            deferred;
                    if (self.simulateQuery) {
                        deferred = $q.defer();
                        $timeout(function () { deferred.resolve( results ); }, Math.random() * 1000, false);
                        return deferred.promise;
                    } else {
                        return results;
                    }
                }

                function searchTextChange(text) {
                    $log.info('Text changed to ' + text);
                }

                function selectedItemChange(item) {

                    if(item != undefined) {
                        if(!self.cart_items[self.selectedItem.id]) {
                            var index = self.cart.push(self.selectedItem) - 1;
                            self.cart_items[self.selectedItem.id] = index;
                            resetSearch();
                        }
                    }
                }

                function resetSearch() {
                    self.selectedItem = null;
                    self.searchText = null;
                    $("#search").attr("aria-expanded","false");
                }

                function setEdit(val){
                    self.beforeQuantity = self.quantity;
                    self.isEdit = val;
                    if(self.isEdit == 1)
                        $(".ui-spinner-button").show();
                }

                /**
                 * Build `components` list of key/value pairs
                 */
                function loadAll() {
                    var repos = {{ products | json_encode | raw}};

                    return repos.map( function (repo) {
                        repo.value = repo.name.toLowerCase();
                        return repo;
                    });
                }

                /**
                 * Create filter function for a query string
                 */
                function createFilterFor(query) {
                    var lowercaseQuery = angular.lowercase(query);

                    return function filterFn(item) {
                        return (item.value.indexOf(lowercaseQuery) === 0);
                    };
                }

                function setActive(){
                    addSpinner();
                    $.ajax({
                        type: 'POST',
                        url: "{{ path('api_set_stock_transfer_active') }}",
                        dataType: 'json',
                        data: { id: {{ stockTransfer.id }}},
                        success: function (data) {
                            window.location.href = Routing.generate('stocktransfer_show', {id: data});
                        }
                    });

                }

                function updateCartItem(newVal, oldVal, index) {
                    var total = 0;
                    self.cart[index].departing_warehouse_quantity = parseInt(self.cart[index].departing_warehouse_quantity,10) - parseInt(newVal - oldVal,10);
                    self.cart[index].receiving_warehouse_quantity = parseInt(self.cart[index].receiving_warehouse_quantity,10) + parseInt(newVal - oldVal,10);
                    angular.forEach(self.cart, function(value, key) {
                        total += value.quantity;
                    });
                    self.cart_total = total;
                }

                function save(draft, complete){
                    if($('#departing-warehouse').val() && $('#receiving-warehouse').val() && self.cart.length > 0) {
                        addSpinner();

                        $.ajax({
                            type: 'POST',
                            url: "{{ path('api_save_stock_transfer') }}",
                            dataType: 'json',
                            data: {cart: self.cart, transfer_date: self.transfer_date, message: self.message, status: draft, departing_warehouse_id: $('#departing-warehouse').val(), receiving_warehouse_id: $('#receiving-warehouse').val(), complete: complete, stock_transfer_id: {{ stockTransfer.id}} },
                            success: function (data) {
                                window.location.href = Routing.generate('stocktransfer_show', {id: data});
                            }
                        });
                    }
                    else {
                        if(!$('#departing-warehouse').val() || !$('#receiving-warehouse').val())
                            $('#error-message').append("<div class='alert alert-error alert-dismissible'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Please select a Departing AND Receiving warehouse.</div>");
                        else if(self.cart.length == 0)
                            $('#error-message').append("<div class='alert alert-error alert-dismissible'><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>Please add at least one item to the Stock Transfer to continue.</div>");
                    }

                }

            };

            function jqSpinner() {
                return {
                    require: 'ngModel',
                    link: function (scope, element, attrs, self) {
                        element.spinner({
                            spin: function (event, ui) {
                                self.$setViewValue(ui.value);
                            }
                        });
                    }
                };
            };

        })();


    </script>
{% endblock footer %}

{% block content %}
    <style>

        .table-form {
            padding: 0px !important;
        }
        .table-form input {
            text-align: center !important;
            margin-bottom: -8px !important;
            height: 60px !important;
        }
        .table-name {
            text-align: center !important;
        }

        span.ui-spinner.ui-state-default.ui-widget.ui-widget-content.ui-corner-all {
            display: flex;
        }
        /*input[type=number]::-webkit-inner-spin-button,*/
        /*input[type=number]::-webkit-outer-spin-button {*/
            /*opacity: 0;*/
        /*}*/
        .ui-spinner-button {
            height: 50%;
            position: absolute;
        }
        .ui-spinner-up:hover, .ui-spinner-down:hover {
            text-decoration: none;
        }
        .ui-spinner-up {
            top: 12px;
            right: 0;
        }
        .ui-spinner-down {
            bottom: -5px;
            right: 0;
        }
    </style>
    <div id="error-message">

    </div>
    <div  ng-controller="myCtrl as ctrl" layout="column" ng-cloak="" class="autocompletedemoCustomTemplate" ng-app="myApp">

        <div class="table">
            <div class="row">
                <div class="col-md-4">
                    <h5>Transfer Date <md-datepicker ng-model="ctrl.transfer_date" ng-disabled="ctrl.isEdit == 0" md-placeholder="Enter date"></md-datepicker></h5>
                </div>
                <div class="col-md-2">
                    <span class="mdl-chip mdl-chip--contact" style="margin-top: 27px;">
                            <span class="mdl-chip__contact mdl-color-text--white" style="background-color: {{ stockTransfer.status.color }};">{{ stockTransfer.status.nameFirstLetter }}</span>
                            <span class="mdl-chip__text">
                                {{ stockTransfer.status.name }}
                            </span>
                        </span>
                </div>
                <div class="col-md-6">
                    <div ng-if="ctrl.isEdit == 0" style="margin: 15px 20px 0;">
                        {% if stockTransfer.status.name == 'Draft' %}
                        <a class="btn btn-raised btn-warning" style="float: right;  font-weight: 700;margin-right: 10px;" ng-click="ctrl.setActive()">APPROVE</a>
                        {% elseif stockTransfer.status.name != 'Completed' %}
                        <a class="btn btn-raised btn-success" style="float: right;  font-weight: 700;margin-right: 10px;" ng-click="ctrl.save('Completed', true)">COMPLETE</a>
                        <a class="btn btn-raised btn-default" ng-click="ctrl.setEdit(1)" style="float: right;  font-weight: 700;margin-right: 10px;">EDIT</a>
                        {% endif %}
                    </div>
                    <div style="margin: 15px 20px 0;" ng-if="ctrl.isEdit == 1">
                        <a class="btn btn-raised btn-success" style="float: right;  font-weight: 700;margin-right: 10px;" ng-click="ctrl.save('Active', false)">UPDATE</a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <form id="warehouse-form">
                        <label for="departing-warehouse">Departing Warehouse</label>
                        {% verbatim %}
                        <select class="form-control" id="departing-warehouse" style="width: 100%;margin: 24px 0 16px;"
                            ng-model="ctrl.departing_warehouse"
                            ng-change="ctrl.warehouseChange('departing')"
                            ng-disabled="ctrl.isEdit == 0"
                            ng-options="option.name for option in ctrl.warehouses track by option.id" required>
                            <option value="" disabled selected>Warehouse</option>
                        </select>
                        {% endverbatim %}
                    </form>
                </div>
                <div class="col-md-6">
                    <form id="warehouse-form">
                        <label for="receiving-warehouse">Receiving Warehouse</label>
                        {% verbatim %}
                        <select class="form-control" id="receiving-warehouse" style="width: 100%;margin: 24px 0 16px;"
                            ng-model="ctrl.receiving_warehouse"
                            ng-change="ctrl.warehouseChange('receiving')"
                            ng-disabled="ctrl.isEdit == 0"
                            ng-options="option.name for option in ctrl.warehouses track by option.id" required>
                            <option value="" disabled selected>Warehouse</option>
                        </select>
                        {% endverbatim %}
                    </form>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" style="width: 100%;">
                        <thead>
                        <tr>
                            <th class="mdl-data-table__cell--non-numeric">Item</th>
                            <th class="table-name" style="width: 100px;">Quantity</th>
                            <th class="table-name" style="width: 100px;">Dep Warehouse Inv</th>
                            <th class="table-name" style="width: 100px;">Rec Warehouse Inv</th>
                            <th style="width: 50px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr  ng-model="cart" ng-repeat="(key, item) in ctrl.cart track by $index">
                            <div  ng-if="item.name != null">
                                {% verbatim %}
                            <td class="mdl-data-table__cell--non-numeric">
                                <img src="{{item.image_url}}" style="height: 34px; padding-right: 15px;">
                                {{ item.name }}
                            </td>
                            <td class="table-form">
                                 <input id="{{item.id}}" ng-model="item.quantity" type="number" min="-3000" ng-change="ctrl.updateCartItem(item.quantity, {{item.quantity}}, $index)" jq-spinner ng-disabled="ctrl.isEdit == 0" class="form-control number_select">
                            </td>
                            <td class="table-form">
                                 <input id="{{item.id}}" ng-model="item.departing_warehouse_quantity" type="number" disabled class="form-control number_select">
                            </td>
                            <td class="table-form">
                                 <input id="{{item.id}}" ng-model="item.receiving_warehouse_quantity" type="number" disabled class="form-control number_select">
                            </td>
                            <td></td>
                                {% endverbatim %}
                            </div>
                        </tr>
                        <tr id="search" ng-if="ctrl.isEdit == 1">
                            <td class="mdl-data-table__cell--non-numeric" style="padding: 0px;">
                                {% verbatim %}
<md-content>
                            <md-autocomplete
                                ng-disabled="ctrl.isDisabled"
                                md-no-cache="true"
                                md-selected-item="ctrl.selectedItem"
                                md-search-text-change="ctrl.searchTextChange(ctrl.searchText)"
                                md-search-text="ctrl.searchText"
                                md-selected-item-change="ctrl.selectedItemChange(item)"
                                md-items="item in ctrl.querySearch(ctrl.searchText)"
                                md-item-text="item.name"
                                md-min-length="0"
                                placeholder="Pick a Product"
                                md-autofocus="false"
                                md-menu-class="autocomplete-custom-template">
                                <md-item-template>
                                    <span class="item-title">
                                        <img src="{{item.image_url}}" style="max-width: 50px;">
                                        <span> {{item.name}} </span>
                                    </span>
                                    <span class="item-metadata">
                                        <span class="item-metastat">
                                            <strong>{{item.warehouse_quantity}}</strong> warehouse quantity
                                        </span>
                                        <span class="item-metastat">
                                           <strong>{{item.total_quantity}}</strong> total quantity
                                        </span>

                                     </span>
                                </md-item-template>
                                <md-not-found>
                                       No product matching "{{ctrl.searchText}}" were found.
                                    </md-not-found>
                            </md-autocomplete>
                            </md-content>
                                {% endverbatim %}
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <hr>
            <div class="row" style="margin-top: 10px;">
                <!-- accepted payments column -->
                <div class="col-md-9">
                    <p class="text-muted well well-sm no-shadow" >
                        <label for="message">Comments</label>
                        <textarea type="text" rows="1" id="message" ng-model="ctrl.message" class="form-control" style="height: 100px;"></textarea>
                    </p>

                </div>
                <!-- /.col -->
                <div class="col-md-3">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th style="width:50%">Total Items:</th>
                                <td>
                                    {% verbatim %}
                                <input ng-model="ctrl.cart_total" class="form-control" style="border-bottom: none; font-size: xx-large; font-weight: 800;" disabled>
                                {% endverbatim %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.col -->
            </div>
        </div>





    </div>
{% endblock %}
