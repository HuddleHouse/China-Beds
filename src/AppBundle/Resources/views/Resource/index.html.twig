{% extends ':default:layout.html.twig' %}

{% block title %}Resources{% endblock %}
{% block page_title %}
    Resource Listing
{% endblock page_title %}

{% block page_name %}
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        var table = '';
        $(document).ready(function () {
            table = $('#part-table').DataTable({
                "iDisplayLength": 50, responsive: true, "fnDrawCallback": function(oSettings) {if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {$(oSettings.nTableWrapper).find('.dataTables_paginate').hide();}}, order: [[ 1, "desc" ]] });

            $('#resourceModal').on('hidden.bs.modal', function (e) {
                $('#resource-modal-content').addClass('expand');
                $('#resource-modal-body').html('');
            });
        });

        function spinModal(id) {
            var target = document.getElementById(id);
            var spinner = new Spinner(opts).spin(target);
            target.appendChild(spinner.el);
        }

        function showResourceForm() {
            $('#resourceModal').modal('show');
            spinModal('resource-modal-content');
            $.ajax({
                type: 'GET',
                url: "{{ path('api_show_resource') }}",
                dataType: 'json',
                success: function (data) {
//                    console.log(JSON.stringify(data,null,4));

                    $('.spinner').hide();
                    if(!data[0]) {
                        $('#resourceModal').modal('hide');
                        showErrorModal('Error: ' + data[1]);
                    }
                    else {
                        $('#resource-modal-content').removeClass('expand');
                        $('#resource-modal-body').html(data[1]);
                    }
                }
            });
        }

        function deleteResource(id, el) {
            $.ajax({
                type: 'POST',
                url: '{{ path('api_resource_delete') }}',
                dataType: 'json',
                data: { resource_id: id },
                success: function (data) {
                    if(data[0] == false) {
                        showErrorModal(data[1]);
                    }
                    else {
                        table.row($(el).parents('tr')).remove().draw(false);
                    }
                }
            });
        }

        function addRow(data) {
            table.row.add(data).draw(false);
        }
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Upload Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for resource in resources %}
                        <tr>
                            <td><a href="{{ asset(resource.webPath) }}" target="_blank">{{ resource.name }}</a></td>
                            <td>{{ resource.dateCreated | date('m/d/y H:i:s') }}</td>
                            <td>
                                <a download class="btn btn-raised btn-xs" href="{{ asset(resource.webPath) }}">Download</a>
                                {% if(is_granted('ROLE_ADMIN')) %}
                                    <button class="btn btn-raised btn-xs" onclick="deleteResource({{ resource.id }}, this)">Delete</button>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    <a id="new-button" href="#" onclick="showResourceForm()" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-tooltip mdl-tooltip--top mdl-tooltip--large" for="new-button">
        Upload Resource
    </div>
    <!-- Modal -->
    <div class="modal fade" id="resourceModal" tabindex="-1" role="dialog" aria-labelledby="resourceModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content expand" id="resource-modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="resourceModalLabel">Upload Resource</h4>
                </div>
                <div id="resource-modal-body" class="modal-body" style="overflow: auto; max-height: 70vh">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
