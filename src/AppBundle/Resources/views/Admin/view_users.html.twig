{% extends ":default:layout.html.twig" %}

{% block title %}All Users{% endblock %}
{% block page_title  %}
All Registered Users
{% endblock page_title %}

{% block page_name  %}
    User
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr role="row" class="odd">
                            <td>
                                <a href="{{ path('admin_edit_user', {'user_id': user.id}) }}">{{ user.displayName }}</a>
                            </td>
                            <td>
                                {{ user.username }}
                            </td>
                            <td>
                                {{ user.email |e }}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        <span>Admin </span>
                                    {% endif %}
                                    {% if role == 'ROLE_WAREHOUSE' %}
                                        <span>Warehouse </span>
                                    {% endif %}
                                    {% if role == 'ROLE_RETAILER' %}
                                        <span>Retailer </span>
                                    {% endif %}
                                    {% if role == 'ROLE_DISTRIBUTOR' %}
                                        <span>Distributor </span>
                                    {% endif %}
                                    {% if role == 'ROLE_SALES_REP' %}
                                        <span>Sales Rep </span>
                                    {% endif %}
                                    {% if role == 'ROLE_SALES_MANAGER' %}
                                        <span>Sales Manager </span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {{ user.lastLogin |date("F jS \\a\\t g:ia") }}
                            </td>
                            <td>
                                <a class="btn btn-raised btn-default btn-xs purple" href="{{ path('admin_edit_user', {'user_id': user.id}) }}">
                                    <i class="fa fa-edit"></i>edit</a>
                                <a class="btn btn-raised btn-danger btn-xs purple" href="{{ path('delete-user', {'id': user.id}) }}">
                                    <i class="fa fa-edit"></i> delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock content %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                "iDisplayLength": 50, responsive: true, "fnDrawCallback": function(oSettings) {if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {$(oSettings.nTableWrapper).find('.dataTables_paginate').hide();}} });

        });
    </script>
{% endblock footer %}