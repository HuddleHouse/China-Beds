{% extends ":default:layout.html.twig" %}

{% block title %}Access Restriction{% endblock %}
{% block page_title %}
    Access Restriction
{% endblock page_title %}

{% block page_name %}
    User
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        var selected = [];
        $(document).ready(function () {
            $('#part-table').DataTable({
                "paging": false,
                "autoWidth": true,
                "searching": false,
                "columns": [
                    { "orderable": false }
                ]
            });
        });

        function addPermission(role_id, route) {
            var checked = 0;
            if($("#"+role_id+route).is(':checked')) {
                checked = 1;
            }
            $.ajax({
                beforeSend: function () {},
                type: 'POST',
                url: "{{ path('api_add_role_permission') }}",
                data: {role_id: role_id, checked: checked, route: route},
                dataType: 'json',
                success: function (data) {}
            });
        }

        function batchAddPermission(category, name) {
            var checked = 1;
            var i = selected.indexOf(category+name);
            if(i == -1) {
                selected.push(category+name);
            }
            else {
                checked = 0;
                selected.splice(i, 1);
            }
            $('input[data-category="'+category+'"]').filter('[value="'+name+'"]').each(function(){
                $(this).prop("checked", checked);
                addPermission($(this).data("id"), $(this).data("route"));
            });
        }
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <table id="part-table" class="table table-striped table-bordered display compact" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        {% for role in roles %}
                        <th class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">{{ role.name }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li style="text-align: center">Click below to batch toggle categories</li>
                                <li role="separator" class="divider"></li>
                                {% for cat in categories %}
                                    <li><a href="#" onclick="batchAddPermission('{{ cat }}', '{{ role.name }}')">{{ cat }}</a></li>
                                {% endfor %}
                            </ul>
                        </th>
                        {% endfor %}
                        <th>Route</th>
                    </tr>
                </thead>
                <tbody>
                {% for key, route in routes %}
                    <tr role="row" class="odd">
                        {% for role in roles %}
                            {% set newname = role.id~route.route %}
                            {% if newname in permissions %}
                                <td><center><input type="checkbox" id="{{ role.id }}{{ route.route }}" checked name="{{ role.id }}@{{ route.route }}" onclick="addPermission({{ role.id }}, '{{ route.route }}')" value="{{ role.name }}" data-id="{{ role.id }}" data-route="{{ route.route }}" data-category="{{ route.category }}"></center></td>
                            {% else %}
                                <td><center><input type="checkbox" id="{{ role.id }}{{ route.route }}" name="{{ role.id }}@{{ route.route }}" onclick="addPermission({{ role.id }}, '{{ route.route }}')" value="{{ role.name }}" data-id="{{ role.id }}" data-route="{{ route.route }}" data-category="{{ route.category }}"></center></td>
                            {% endif %}
                        {% endfor %}
                        <td>{{ route.path }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock content %}