{% extends ":default:layout.html.twig" %}

{% block title %}Access Restriction{% endblock %}
{% block page_title %}
    Access Restriction
{% endblock page_title %}

{% block page_name %}
    User
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                'iDisplayLength':20,
            });
        });
    </script>
{% endblock footer %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="table">
            <table id="part-table" class="table table-striped table-bordered display compact" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        {% for role in roles %}
                        <th>{{ role.name }}</th>
                        {% endfor %}
                        <th>Route</th>
                    </tr>
                </thead>
                <tbody>
                {% for route in routes %}
                    <tr role="row" class="odd">
                        {% for role in roles %}
                            <td><center><input type="checkbox" name="" value="{{ role.name }}"></center></td>
                        {% endfor %}
                        <td>{{ route.path }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock content %}