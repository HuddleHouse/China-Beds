{% trans_default_domain 'FOSUserBundle' %}

{% if not form.vars.valid %}
    <div class="col-md-8">
        <div class="bs-callout bs-callout-danger ">
            {{ form_errors(form.current_password) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>
{% endif %}
<div class="col-md-4"></div>
<div class="col-md-3 " style="background-color:white; padding:30px; -webkit-box-shadow: 0px 17px 35px -8px rgba(0,0,0,0.75);-moz-box-shadow: 0px 17px 35px -8px rgba(0,0,0,0.75);box-shadow: 0px 17px 35px -8px rgba(0,0,0,0.75);">
        <legend style="padding-bottom:10px;">Change Password</legend>
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-group' } }) }}

        {{ form_label(form.current_password) }}
        {{ form_widget(form.current_password , { 'attr': {'class': 'form-control'} }) }}

        {{ form_label (form.plainPassword.first) }}
        {{ form_widget (form.plainPassword.first, { 'attr': {'class': 'form-control'}}) }}

        {{ form_label (form.plainPassword.second) }}
        {{ form_widget (form.plainPassword.second, { 'attr': {'class': 'form-control'}}) }}
        <div style="padding-top: 20px;">
            <input class="btn btn-raised btn-success"  type="submit" value="{{ 'change_password.submit'|trans }}" />
        {{ form_end(form) }}
    </div>

</div>
<div class="col-md-4"></div>