{% extends ':default:layout.html.twig' %}

{% block title %}Price Group{% endblock %}
{% block page_title %}
    Price Group
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('admin_price_group_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
            "iDisplayLength": 50});
        });
    </script>
{% endblock footer %}

{% block content %}
    <center><h2>{{ priceGroup.name }}</h2></center>
    <a class="btn btn-success" href="{{ path('admin_price_group_edit', {'id': priceGroup.id}) }}" style="margin-bottom: 15px;">Edit price group</a>
    <div class="table">
    <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
        <thead>
            <tr role="row">
                <th>Name</th>
                <th>Company</th>
                <th>City</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr role="row" class="odd">
                <td><a href="{{ path('admin_edit_user', {'user_id': user.id}) }}">{{ user.firstName }} {{ user.lastName }}</a></td>
                <td><a href="{{ path('office_show', {'id': user.office.id}) }}">{{ user.office.name ? user.office.name : '' }}</a></td>
                <td>{{ user.city }}</td>
                <td>{{ user.state.name }}</td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
        </div>
{% endblock %}
