{% extends ':default:layout.html.twig' %}

{% block title %}Price Group{% endblock %}
{% block page_title %}
    Price Group
{% endblock page_title %}

{% block page_name %}
    User
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable();
        });
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <a class="btn btn-success" href="{{ path('admin_price_group_new') }}" style="margin-bottom: 15px;">Create a price group</a>
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th style="width: 150px;">Number of Users</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for priceGroup in priceGroups %}
                        <tr role="row" class="odd">
                            <td><a href="{{ path('admin_price_group_show', { 'id': priceGroup.id }) }}">{{ priceGroup.name }}</a></td>
                            <td><center>{{ priceGroup.count }}</center></td>
                            <td>
                                <a class="btn btn-default btn-xs purple" href="{{ path('admin_price_group_edit', { 'id': priceGroup.id }) }}"><i class="fa fa-edit"></i> Edit</a>
                                <a class="btn btn-info btn-xs purple" href="{{ path('admin_price_group_show', { 'id': priceGroup.id }) }}"><i class="fa fa-edit"></i> Show Users</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
