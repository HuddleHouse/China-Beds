<div class="row">
    <div class="col-md-12">
        <div class="table">
            <a class="btn btn-success" style="margin-bottom: 15px;" href="{{ path('fos_user_group_new') }}">Add a New Role</a>
            <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th style="width: 150px;">Number of Users</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for group in groups %}
                                <tr role="row" class="odd">
                                    <td>
                                        <a href="">{{ group.name }}</a>
                                    </td>
                                    <td>
                                        <center>{{ group.count }}</center>
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-xs purple" href="{{ path('fos_user_group_edit', {'groupName': group.name} ) }}"><i class="fa fa-edit"></i> Edit</a>
                                        <a class="btn btn-info btn-xs purple" href="{{ path('fos_user_group_show', {'groupName': group.name}) }}"><i class="fa fa-edit"></i> Show Users</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
        </div>
    </div>

