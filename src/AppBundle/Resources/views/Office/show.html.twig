{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#part-table').DataTable({
                paging: false
            });
        });
    </script>
{% endblock footer %}

{% block content %}
    <table>
        <tbody>
            <tr>
                <th style="padding-right: 44px;">Id</th>
                <td>{{ office.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ office.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul style="margin-top: 30px;">
            <a class="btn btn-default" href="{{ path('office_edit', { 'id': office.id }) }}">Edit</a>
            {{ form_start(delete_form) }}
                <input class="btn btn-warning" type="submit" value="Delete">
            {{ form_end(delete_form) }}
    </ul>
{% endblock %}
