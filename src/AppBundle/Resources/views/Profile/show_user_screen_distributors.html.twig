<div class="box box-info">
        <div class="box-header with-border" data-widget="collapse">
            <i class="fa fa-minus"></i>
            <h4 style="font-family: 'Raleway', sans-serif; font-weight: 600;display: inline;"> Distributors (Only on Sale Reps up)</h4>

            <div class="pull-right">
                <span data-toggle="tooltip" title="" class="badge bg-yellow" data-original-title="3 New Messages">3</span>
                <button type="button" class="btn bg-teal btn-sm" data-widget="collapse"><i class="fa fa-minus white"></i>
                </button>
                <button type="button" class="btn bg-teal btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            {#<h8>This section shows a list of distributors. When you click on their name it will take you to a page that lists all of the distributors orders and the retailers under them. (Maybe 2.0 but for right now it takes you to edit them).#}
                {#<br>Sales Rep - List of all of their Distributors#}
                {#<br>Sales Manager - List of all of that Sales Reps Distributors#}
                {#<br>Operations - List of All Retailers#}
            {#</h8>#}
            {#<hr>#}
            <div class="table" style="box-shadow: none;padding-left: 0; padding-right: 0;">
                <table id="my-distributors" class="table table-hover table-compact table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr role="row">
                        <th>Retailer Name</th>
                        <th>Location</th>
                        <th>Sales Rep</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for distributor in distributors %}
                        <tr role="row">
                            <td><a href="{{ path('admin_edit_user', { 'user_id': distributor.id }) }}">{{ distributor.firstName }} {{ distributor.lastName }}</a></td>
                            <td>{{ distributor.state.name }}</td>
                            <td>
                                {% if distributor.mySalesRep.firstName is defined %}
                                    <a href="{{ path('admin_edit_user', { 'user_id': distributor.mySalesRep.id }) }}">{{ distributor.mySalesRep.firstName }} {{ distributor.mySalesRep.lastName }}</a>
                                {% else %}
                                    None
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
                <a ng-click="changeUserType('{{ app.user.activechannel.name }}', {{ app.user.activechannel.id }}, 'Distributor')" class="btn btn-raised btn-sm btn-default btn-flat pull-left" data-toggle="modal" data-target="#create-person"><i class="fa fa-plus"></i> Create Distributor</a>
            <a href="javascript:void(0)" class="btn btn-raised btn-sm btn-default btn-flat pull-right">View All Orders</a>
        </div>
        <!-- /.box-footer -->
    </div>
