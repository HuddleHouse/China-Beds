<div class="box box-info">
    <div class="box-header with-border" data-widget="collapse">
        <i class="fa fa-minus"></i>
        <h4 style="font-family: 'Raleway', sans-serif; font-weight: 600;display: inline;">Retailers (Only on Distributors up)</h4>

        <div class="pull-right">
            <span data-toggle="tooltip" title="" class="badge bg-yellow" data-original-title="3 New Messages">3</span>
            <button type="button" class="btn bg-teal btn-sm" data-widget="collapse"><i class="fa fa-minus white"></i>
            </button>
            <button type="button" class="btn bg-teal btn-sm" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {#<h8>This section shows a list of retailers. When you click on thier name it shows you all of the orders for them (Maybe 2.0 but for right now it takes you to edit them).#}
            {#<br>Distributer - List of retailers that when selected shows order history for that user#}
            {#<br>Sales Rep - List of all of their Distributors' Retailers#}
            {#<br>Sales Manager - List of all of that Sales Reps Retailers#}
            {#<br>Operations - List of All Retailers#}
        {#</h8>#}
        {#<hr>#}
        <div class="table" style="box-shadow: none; padding-left: 0; padding-right: 0;">
            <table id="my-retailers" class="table table-hover table-compact table-striped table-bordered  dataTable no-footer" cellspacing="0" width="100%">
                <thead>
                <tr role="row">
                    <th>Retailer Name</th>
                    <th>Location</th>
                    <th>Distributor</th>
                </tr>
                </thead>
                <tbody>
                {% for retailer in retailers %}
                <tr role="row">
                    <td><a href="{{ path('admin_edit_user', { 'user_id': retailer.id }) }}">{{ retailer.displayname }}</a></td>
                    <td>{{ retailer.state.name }}</td>
                    <td>
                        {% if retailer.myDistributor %}
                        <a href="{{ path('admin_edit_user', { 'user_id': retailer.myDistributor.id }) }}">{{ retailer.myDistributor.displayname }}</a>
                        {% else %}
                        None
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.box-body -->
    <div class="box-footer clearfix">
            <a ng-click="changeUserType('{{ app.user.activechannel.name }}', {{ app.user.activechannel.id }}, 'Retailer')" class="btn btn-raised btn-sm btn-default btn-flat pull-left" data-toggle="modal" data-target="#create-person"><i class="fa fa-plus"></i> Create Retailer</a>
        <a href="javascript:void(0)" class="btn btn-raised btn-sm btn-default btn-flat pull-right">View All Orders</a>
    </div>
    <!-- /.box-footer -->
</div>

