{% trans_default_domain 'FOSUserBundle' %}



{% set messages = [] %}
{% for child in form.children %}
    {% for error in child.vars.errors %}
        {% set messages = messages|merge([error.message]) %}
    {% endfor %}
{% endfor %}
{% if messages|length %}
	<div class="alert alert-danger alert-white rounded">
	    <ul>
		{% for message in messages %}
		    <li>{{ message }}</li>
		{% endfor %}
	    </ul>
	</div>
{% endif %}

<div class="body" ng-app="myApp">
    <div class="wrapper" ng-controller="MyCtrl">
        <div class="table">
            <div class="form-body">
                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-horizontal', 'id':'edit_user_settings' } }) }}

                <!-- Nav tabs -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">User</a></li>
                                <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">Address</a></li>
                                <li><a href="#tab_3" data-toggle="tab">Advanced</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.first_name) }}
                                            {{ form_widget(form.first_name) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.last_name) }}
                                            {{ form_widget(form.last_name) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.company_name) }}
                                            {{ form_widget(form.company_name) }}
                                            {{ form_label(form.phone) }}
                                            {{ form_widget(form.phone) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.email) }}
                                            {{ form_widget(form.email) }}
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_2">
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.address_1) }}
                                            {{ form_widget(form.address_1) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.address_2) }}
                                            {{ form_widget(form.address_2) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.city) }}
                                            {{ form_widget(form.city) }}
                                        </div>
                                        <div class="col-md-2">
                                            {{ form_label(form.state) }}
                                            {{ form_widget(form.state) }}
                                        </div>
                                        <div class="col-md-4">
                                            {{ form_label(form.zip) }}
                                            {{ form_widget(form.zip) }}
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                                <div class="tab-pane" id="tab_3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            {{ form_label(form.ach_routing_number) }}
                                            {{ form_widget(form.ach_routing_number) }}
                                        </div>
                                        <div class="col-md-6">
                                            {{ form_label(form.ach_account_number) }}
                                            {{ form_widget(form.ach_account_number) }}
                                        </div>
                                    </div>
                                    {#{% if is_granted("ROLE_ADMIN") %}#}
                                    {#<div class="row">#}
                                        {#<div class="col-md-6">#}
                                            {#{{ form_label(form.distributor_fedex_number) }}#}
                                            {#{{ form_widget(form.distributor_fedex_number) }}#}
                                        {#</div>#}
                                    {#</div>#}
                                    {#{% endif %}#}
                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div>
                    </div>
                </div>
                <div style="padding-top: 20px;">
                    <input class="btn btn-raised btn-success" type="submit" value="Update"/>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>



