<div class="box box-info">
        <div class="box-header with-border" data-widget="collapse">
            <i class="fa fa-minus"></i>
            <h4 style="font-family: 'Raleway', sans-serif; font-weight: 600;display: inline;"> Sales Reps (Only on Sales Managers up)</h4>

            <div class="pull-right">
                <span data-toggle="tooltip" title="" class="badge bg-yellow" data-original-title="3 New Messages">3</span>
                <button class="btn bg-teal btn-sm" type="button" data-widget="collapse"><i class="fa fa-minus white"></i>
                </button>
                <button class="btn bg-teal btn-sm" type="button" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            {#<h8>This section shows a list of Sales Reps. When you click on their name it will take you to a page that lists all of the sales reps distributors and orders.#}
                {#<br>Sales Manager - List of all of their Sales Reps Distributors#}
                {#<br>Operations - List of All Retailers#}
            {#</h8>#}
            {#<hr>#}
            <div class="table" style="box-shadow: none;padding-left: 0; padding-right: 0;">
                <table id="my-sales-reps" class="table table-striped table-bordered  dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr role="row">
                        <th>Retailer Name</th>
                        <th>Location</th>
                        <th>Channel</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sales_rep in sales_reps %}
                        <tr role="row">
                            <td><a href="">{{ sales_rep.firstName }} {{ sales_rep.lastName }}</a></td>
                            <td>{{ sales_rep.state.name }}</td>
                            <td>
                                {% for channel in sales_rep.userChannels %}
                                    {{ channel.name }}
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <a href="javascript:void(0)" class="btn btn-raised btn-sm btn-info btn-flat pull-left">Create Sales Reps</a>
            <a href="javascript:void(0)" class="btn btn-raised btn-sm btn-default btn-flat pull-right">View All Orders</a>
        </div>
        <!-- /.box-footer -->
    </div>
