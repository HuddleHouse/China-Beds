<table border="1" style="border-collapse:collapse;width:1024;background-color:#fff" cellspacing="5" cellpadding="5">
    <tbody>
    <tr>
        <th colspan="2">Date</th>
        <th colspan="3">Order ID</th>
        <th>PO#</th>
    </tr>
    <tr>
        <td colspan="2">{{ order.submitDate|date("m/d/Y h:iA") }}</td>
        <td colspan="3" bgcolor="{{ order.status.color }}">{{ order.orderId }} {{ order.status.name }}</td>
        <td>{{ order.ordernumber }}</td>
    </tr>
    <tr>
        <th colspan="2">Name and Billing Address</th>
        <th colspan="3">Warehouse</th>
        <th>Shipping Name and Address</th>
    </tr>
    <tr>
        <td colspan="2">
            {{ order.submittedforuser.fullname }}<br>
            {{ order.submittedforuser.address1 }}<br>
            {% if order.submittedforuser.address2 %}
                {{ order.submittedforuser.address2 }}<br>
            {% endif %}
            {% if order.submittedforuser.companyname %}
                {{ order.submittedforuser.companyname }}<br>
            {% endif %}

            {{ order.submittedforuser.city }}, {{ order.submittedforuser.state.name }},  {{ order.submittedforuser.zip }}<br>
            {{ order.submittedforuser.phone }}<br>
            <a href="mailto:{{ order.submittedforuser.email }}" target="_blank">{{ order.submittedforuser.email }}</a><br>
        </td>
        <td colspan="3">&nbsp;</td>
        <td>
            {{ order.shipname }}<br>
            {{ order.shipaddress }}<br>
            {% if order.shipaddress2 %}
                {{ order.shipaddress2 }}<br>
            {% endif %}
            {{ order.shipcity }}, {{ order.state.name }} {{ order.shipzip }}<br>
            {{ order.shipphone }}<br>
            <a href="mailto:{{ order.shipemail }}" target="_blank">{{ order.shipemail }}</a><br>
            Special Instructions:<br>
            {{ order.comments }}<br>


            <strong>FedEx Tracking #s:</strong><br>
            {% for label in order.shippinglabels %}
                <a href="{{ order.channel.backendurl }}/{{ label.path }}">{{ label.trackingnumber }}</a>&nbsp;&nbsp;
            {% endfor %}
        </td>
    </tr>

    <tr>
        <td colspan="6">
            <table width="100%" cellpadding="5" cellspacing="0">
                <tr>
                    <th>Item Id</th>
                    <th>Item</th>
                    {#<th>Description</th>#}
                    <th>Warehouse</th>
                    <th align="right">Cost</th>
                    <th align="right">Qty</th>
                    <th align="right">Total</th>
                </tr>
                {% for item in order.productvariants %}
                    <tr>
                        <td style="border-top: 1px solid black;">{{ item.productvariant.sku }}</td>
                        <td style="border-top: 1px solid black;">{{ item.productvariant.name }} {{ item.productvariant.product.name }}</td>
                        <td style="border-top: 1px solid black;">{% if item.warehouseinfo|length == 1 %}{{ item.warehouseinfo[0].warehouse.name }}{% else %}MULTIPLE{% endif %}</td>
                        <td style="border-top: 1px solid black;" align="right">${{ item.price|number_format(2, '.', ',') }}</td>
                        <td style="border-top: 1px solid black;" align="center">{{ item.quantity }}</td>
                        <td style="border-top: 1px solid black;" align="right">${{ (item.price * item.quantity)|number_format(2, '.', ',') }}</td>
                    </tr>
                    {% if item.warehouseinfo|length > 1 %}
                    {% for warehouse in item.warehouseinfo %}
                        <tr>
                            <td style="border-top: 1px solid black;">&nbsp;</td>
                            <td style="border-top: 1px solid black;">&nbsp;</td>
                            <td style="border-top: 1px solid black;">{{ warehouse.warehouse.name }}</td>
                            <td style="border-top: 1px solid black;" align="right">&nbsp;</td>
                            <td style="border-top: 1px solid black;" align="center">{{ warehouse.quantity }}</td>
                            <td style="border-top: 1px solid black;" align="right">&nbsp;</td>
                        </tr>
                    {% endfor %}
                    {% endif %}
                {% endfor %}
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="6">&nbsp;</td>
    </tr>
    {% if order.ispickup %}
        <tr>
            <th colspan="5"><strong>Pickup</strong></th>
            <td align="right">{{ order.pickupagent }}</td>
        </tr>
    {% else %}
    <tr>
        <th colspan="5">Shipping</th>
        <td align="right">{{ order.shipdescription }} - ${{ order.shipping|number_format(2, '.', ',') }}</td>
    </tr>
    {% endif %}

    <tr>
        <th colspan="5">Grand Total</th>
        <td align="right">${{ order.total|number_format(2, '.', ',') }}</td>
    </tr>
    <tr>
        <th colspan="5">Payment Methods</th>
        <td align="right">
            {% for payment in order.orderpayments %}
                {% if payment.method == 'cc' %}CREDIT CARD {{ payment.detail }} - auth {{ payment.gatewayauthcode }}{% endif %}
                {% if payment.method == 'ledger' %}LEDGER{% endif %}
                {% if payment.method == '' %}PENDING - NO PAYMENT{% endif %}
            {% endfor %}
        </td>
    </tr>
    </tbody>
</table>