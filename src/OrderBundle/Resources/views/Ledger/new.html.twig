{% extends ':default:layout.html.twig' %}

{% block title %}New {{ channel.name }} Credit Request{% endblock %}
{% block page_title %}
    New {{ channel.name }} Credit Request
{% endblock page_title %}

{% block page_name %}
    <a href="{{ path('ledger_index') }}">< Back to the list</a>
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            $('#ledger_description').keyup(function () {
                var len = $(this).val().length;
                if (len >= 255) {
                    $(this).val($(this).val().substring(0, 255));
                    $('#charNum').text(0);
                } else {
                    var l = 255 - len;
                    $('#charNum').text(l);
                }
            });
        });
    </script>
{% endblock footer %}

{% block content %}
    {% if not form.vars.valid %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    {{ form_errors(form.submittedForUser) }}
                    {{ form_errors(form.amountRequested) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
        </div>
    {% endif %}
    <div class="table">
        <div class="form-body">
            {{ form_start(form, {'attr': { 'class': 'form-horizontal' } }) }}
            <div class="row">
                {#{% if app.user.hasRole('ROLE_RETAILER') %}#}
                {#{% do form.submittedForUser.setRendered %}#}
                {#{% else %}#}
                {#<div class="col-md-3 form-group">#}
                {#{{ form_label(form.submittedForUser) }}#}
                {#{{ form_widget(form.submittedForUser) }}#}
                {#</div>#}
                {#{% endif %}#}
                <div class="col-md-3 form-group">
                    {{ form_label(form.amountRequested) }}
                    {{ form_widget(form.amountRequested) }}
                </div>
                <div class="col-md-3 form-group">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.description) }} <span id="charNum" style="font-weight:200;color:#8e8e8e;">255</span>
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <input class="btn btn-raised btn-success" type="submit" value="Create" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}