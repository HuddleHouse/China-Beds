{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ledger</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ledger.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ ledger.amount }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if ledger.createdOn %}{{ ledger.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Achrequested</th>
                <td>{% if ledger.achRequested %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Isarchived</th>
                <td>{% if ledger.isArchived %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ledger.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ledger_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ledger_edit', { 'id': ledger.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
