{% extends ":default:layout.html.twig" %}

{% block title %}Ledger{% endblock %}
{% block page_title %}
    Ledger
{% endblock page_title %}

{% block page_name %}
    Listings
{% endblock page_name %}

{% block actions %}
{% endblock actions %}

{% block footer %}
    <script>
        $(document).ready(function () {
            var expanded = false;
            var table = $('#part-table').DataTable({
                "iDisplayLength": 50, responsive: true, "fnDrawCallback": function(oSettings) {if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {$(oSettings.nTableWrapper).find('.dataTables_paginate').hide();}}, order: [[ 2, "desc" ]] });

            //hide the full description
            table.on('click', 'td#description', function () {
                var tr = $(this).parents('tr');
                var row = table.row( tr );

                if (expanded) {
                    expanded = false;
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                    $(this).closest('td').find('span').html('Click to expand');
                }
                else {
                    expanded = true;
                    // Open this row (the format() function would return the data to be shown)
                    row.child(format(tr.data('child-value'), row.index(), row.row()), "child").show();
                    $(this).closest('td').find('span').html('Click to collapse');
                    tr.addClass('shown');
                }

            });
            //put the description info in the child if table is in responsive mode
            table.on('responsive-display', function (e, datatable, row, showHide, update) {
//                console.log( 'Details for row '+row.index()+' '+(showHide ? 'shown' : 'hidden') );
                var info = $(row.node()).data('child-value');
                //hide expanded descriptions if shown
                if(row.child().isShown())
                    row.child().hide();
                if(showHide)
                    $(row.child()).find('span.dtr-data span').html(info);
                else
                    $(row.child()).find('span.dtr-data span').html('Click to expand');
            });
        });

        function format(description, index, row) {
            return '<ul data-dtr-index="'+index+'">' +
                    '<li data-dtr-index="'+index+'" data-dt-row="'+row[0][0]+'" data-dt-column="9">' +
                    '<span class="dtr-title">Description</span>&nbsp;' +
                    '<span class="dtr-data"><span>'+description+'</span></span></li></ul>';
        }


        function createLedgerWithAPI(amount, userId, achRequested, description, type, typeId) {
            $.ajax({
                type: 'POST',
                url: "{{ path('api_new_ledger') }}",
                dataType: 'json',
                data: {amount: amount, userId: userId, achRequested: achRequested, description: description, type: type, typeId: typeId},
                success: function (data) {
                    console.log(JSON.stringify(data,null,4));
                }
            });
        }
    </script>
{% endblock footer %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table id="part-table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Requested</th>
                        <th>Credited</th>
                        <th>Date Created</th>
                        <th>Date Posted</th>
                        <th>User</th>
                        <th>Added by</th>
                        <th>Credited by</th>
                        <th>ACH</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ledger in ledgers %}
                        {% if ledger.description is not null %}
                        <tr data-child-value="{{ ledger.description }}">
                            <td>{{ ledger.amountRequested | number_format(2) }}</td>
                            <td>{{ ledger.amountCredited | number_format(2) }}</td>
                            <td>{{ ledger.created | date('m/d/y') }}</td>
                            <td>{% if ledger.posted %}{{ ledger.posted | date('m/d/y') }}{% else %}--{% endif %}</td>
                            <td>{{ ledger.user.fullName }}</td>
                            <td>{{ ledger.addedByUser.fullName }}</td>
                            <td>{{ ledger.creditedByUser.fullName | default('--') }}</td>
                            <td>{% if ledger.achRequested %}Yes{% else %}No{% endif %}</td>
                            <td>{{ ledger.type }}</td>
                            <td id="description"><span>Click to expand</span></td>
                            <td>
                                {% if app.user.hasRole('ROLE_ADMIN') %}
                                    <a class="btn btn-raised btn-default btn-xs purple" href="{{ path('ledger_show', { 'id': ledger.id }) }}">Show</a>
                                {% endif %}
                                <a class="btn btn-raised btn-default btn-xs purple" href="{{ path('ledger_edit', { 'id': ledger.id }) }}">Edit</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td>{{ ledger.amountRequested | number_format(2) }}</td>
                            <td>{{ ledger.amountCredited | number_format(2) }}</td>
                            <td>{{ ledger.created | date('m/d/y') }}</td>
                            <td>{% if ledger.posted %}{{ ledger.posted | date('m/d/y') }}{% else %}--{% endif %}</td>
                            <td>{{ ledger.user.fullName }}</td>
                            <td>{{ ledger.addedByUser.fullName }}</td>
                            <td>{{ ledger.creditedByUser.fullName | default('--') }}</td>
                            <td>{% if ledger.achRequested %}Yes{% else %}No{% endif %}</td>
                            <td>{{ ledger.type }}</td>
                            <td>None</td>
                            <td>
                                {% if app.user.hasRole('ROLE_ADMIN') %}
                                    <a class="btn btn-raised btn-default btn-xs" href="{{ path('ledger_show', { 'id': ledger.id }) }}">Show</a>
                                {% endif %}
                                <a class="btn btn-raised btn-default btn-xs" href="{{ path('ledger_edit', { 'id': ledger.id }) }}">Edit</a>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a id="new-button" href="{{ path('ledger_new') }}" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
        <i class="material-icons">add</i>
    </a>
    <div class="mdl-tooltip mdl-tooltip--top mdl-tooltip--large" for="new-button">
        Add a New Ledger
    </div>
{% endblock content %}