        .order_product .product_image {
            padding-top:150px;
        }
        .order_product .product_image img {
            position:absolute;
            top:0;
            left:0;
            right:0;
            margin:auto;
        }
    </style>

<div ng-app="myApp" ng-controller="myCtrl" id="MainCtrl">
    <div class="table"  style="min-height: 100vh;">
        <div class="row">
            <div class="col-md-5">
                {% include '@Order/OrderProducts/order-form.html.twig' %}
            </div>
            <div class="col-md-5">
                <div class="table" style="background:rgba(2,177,242,.35); min-height: 250px;">
                    <br>
                    <center><h1 style="color: #fff;">Get More, Make More</h1></center>
                    <center><h2>Specials</h2></center>
                    <center><h4>Save up to 25% on closeout items!</h4></center>
                </div>
            </div>
        </div>

        <div class="row" style="padding-bottom: 40px;padding-top: 20px;">
            <div class="col-md-6">
                <div class="button-group filters-button-group" style="text-align: center; margin-top: 29px;">
                    <button class="button is-checked" data-filter="*">ALL</button>
                    {% for category in categories %}
                        <button class="button" data-filter=".{{ category.id }}">{{ category.name }}</button>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="table" style="background-color: #02B1F2;">
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <center>Item (s)</center>
                            <input ng-model="cart_num_items" class="cart_info" style="width: 100%; height: 38px;" readonly>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <center>Total ($)</center>
                            {% verbatim %}
                                <div class="cart_info" style="width: 100%; height: 38px; padding-top: 10px; min-width: 91px;" >{{ cart_total | currency:'$' }}</div>
                            {% endverbatim %}
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <button class="btn btn-raised review_cart_button" id="submit-button" ng-click="submitCart()" type="submit" style="width: 100%;">Review ></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SALES_MANAGER') or is_granted('ROLE_SALES_REP') %}
        <div class="row" style="margin-bottom: 30px;" >
            <div class="col-md-12" >
                <div class="table-responsive" ng-show="hasCustomItem == 1">
                    <table class="table no-margin">
                        <thead>
                        <center><h4>Manual Items</h4></center>
                        <tr>
                            <th>Description</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="item in cart['customItems']">
                            <td>
                                <div class="form-group is-empty" style="margin: 0px 0 0 0;">
                                    <textarea class="form-control" ng-model="item.description">This is the description Yoyoyoyoyo.</textarea>
                                </div>
                            </td>
                            <td>
                                <div class="form-group is-empty" style="margin: 0px 0 0 0;">
                                    <input type="number" class="form-control" ng-change="calculateCart()" ng-model="item.price">
                                </div>
                            </td>
                            <td>
                                <button ng-click="removeCustomItem(item)" class="btn btn-raised btn-sm btn-warning btn-flat">X</button>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="row">
            <div class="grid md-col-12 col-lg-10">
                <div class="row">
                {#{% for product in products %}#}
                {% verbatim %}
                    <div ng-repeat="product in products track by product.id" class="col-md-5 element-item {{ product.cat_ids }} order_product">
                        <div class="product_image" style="display: table; margin: 0 auto;">
                            <img src="{{ product.path }}" style="border: 1px solid #95989A;max-width: 350px; max-height: 150px;">
                            <div class="product_name">
                                <center>{{ product.name }}</center>
                            </div>
                        </div>

                        <div class="price_box_row " style="font-size: smaller;">

                                <div ng-repeat="variant in product.variants track by $index" class="price_box">
                                    <div class="variant_name gray_box">
                                        {{ variant.name }}
                                    </div>
                                    <div id="variant-{{ variant.variant_id }}" class="variant_quantity gray_box">
                                        <input type="number"
                                               min="0"
                                               onclick="this.select()"
                                               style="text-align: center; width: 100%;    border: none;"
                                               ng-model="product_variant_order_quan[ variant.variant_id ]"
                                               ng-init="product_variant_order_quan[ variant.variant_id ] = 0"
                                               ng-change="updateCart({{ variant.variant_id }}, {{ variant.cost }}, {{ variant.inventory}}, '{{variant.type}}')"
                                        >
                                    </div>
                {% endverbatim %}
                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SALES_MANAGER') or is_granted('ROLE_SALES_REP') %}
                                    <div class="variant_price gray_box">
                                        {% verbatim %}
                                             <input
                                               onclick="this.select()"
                                               style="text-align: center; width: 100%;    border: none;"
                                               ng-model="variant.cost"
                                               ng-change="calculateCart()"
                                               >
                                        {% endverbatim %}
                                    </div>
                                    {% else %}
                                        <div class="variant_price gray_box">
                                        {% verbatim %}
                                            {{ variant.cost | currency}}
                                        {% endverbatim %}
                                        </div>
                                    {% endif %}
                {% verbatim %}

                                    <div ng-if="variant.inventory < 10" class="variant_inventory">
                                        {{ variant.inventory > 10 ? '10+' : variant.inventory }} Avail
                                    </div>
                                    <div ng-if="variant.inventory >= 10" class="variant_inventory">
                                                &nbsp;
                                    </div>
                                </div>
                        </div>
                    </div>

                <div ng-repeat="item in pop track by $index" class="col-md-3 element-item 11 order_product" style="margin-bottom: 25px; margin-top:45px;">
                    <div class="product_image" style="display: table; margin: 0 auto; width: 60%;">
                        <img src="{{item.picture}}" style="margin-left: auto; margin-right: auto; display: inherit;max-width: 175px;max-height: 150px;">
                        <div class="product_name" style="min-height: 41px;">
                            <center>{{item.name}}</center>
                        </div>
                        <div class="row solid_gray_box" style="margin-right: 0px; margin-left: 0px;">
                            <div class="col-md-12">
                                <div class="pop_name" style="padding-top: 13px;">{{item.description}}</div>
                            </div>
                            <div class="col-md-12" >
                                <input id="pop-{{item.id}}" type="number" class="pop_amount form-control" style="margin-top: -20px; background-color: #fff; text-align: center; width: 100%;    border: none;;"
                                               min="0"
                                               onclick="this.select()"
                                               ng-model="pop_order_quan[ item.id ]"
                                               ng-init="pop_order_quan[ item.id ] = 0"
                                               ng-change="updateCart({{ item.id }}, {{ item.cost }}, 999, '{{item.type}}')"
                                        >
                                <div class="pop_price" style="text-align: center; padding-bottom:10px;">{{item.cost | currency}}</div>
                            </div>
                        </div>
                    </div>
                </div>
 {% endverbatim %}

            </div>
            </div>
        </div>


        <div id="floaty-box" class="col-lg-2 visible-lg">
            <ul>
                <li><h6 style="margin: 0;"><i id="side-all" class="fa fa-circle" aria-hidden="true"></i> All</h6></li>
                {% for category in categories %}
                    <li><h6 style="margin: 0;"><i id="side-{{ category.id }}" class="fa fa-circle-thin"></i> {{ category.name }}</h6></li>
                {% endfor %}
                <li><h6 style="margin: 0;color: #02B1F2;"><i id="side-review" class="fa fa-circle-thin" aria-hidden="true"></i> Review Order</h6></li>

            </ul>
        </div>
    </div>
</div>
{#</form>#}


{% endblock %}
