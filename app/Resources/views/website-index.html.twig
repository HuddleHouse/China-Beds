    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}"/>

    <![endif]-->
    {#<link href="css/font-awesome.css" rel="stylesheet">#}
    {#<link href="css/custom.css" rel="stylesheet">#}
    {#<link href="css/responsive.css" rel="stylesheet">#}
    <script src="https://use.typekit.net/wph0osy.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
</head>
<body>

<div class="container">
    <nav class="navbar">
        <div class="social-links">
            <ul>
                <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
                <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
                <li><i class="fa fa-instagram" aria-hidden="true"></i></li>
            </ul>
        </div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">
                <img style="max-width: 140px;" src="{{ asset('images/web/MlilylogoColor@2x.png') }}" />
            </a>
            <div class="login-btn">
                <ul>
                    <li>Login</li>
                </ul>
            </div>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('website_homepage', {site: site}) }}">Home</a></li>
                <li><a href="{{ path('mattresses', {site: site}) }}">MATTRESSES</a></li>
                <li><a href="{{ path('pillows', {site: site}) }}">PILLOWS</a></li>
                <li><a href="{{ path('adjustables', {site: site}) }}">ADJUSTABLE BEDS</a></li>
            </ul>
            <div class="regiter-head"><img style="max-height: 80px;" src="{{ asset('images/web/RegisterButton@2x.png') }}" /></div>
        </div><!--/.nav-collapse -->
    </nav>
    {% block body %}{% endblock %}
</div>

<footer>
    <div class="copyright">&copy; 2016 {{ site|upper }}USA | ALL RIGHTS RESERVED</div>
</footer>

{% block javascripts %}
    {% javascripts '@WebsiteBundle/Resources/public/js/*' filter="jsqueeze" output="js/websiteBundle.js"%}
    {% endjavascripts %}
{% endblock %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>

<script src="{{ asset('js/websiteBundle.js') }}"></script>
{% block footer %}{% endblock %}
</body>
</html>